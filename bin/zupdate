#!/usr/bin/env zsh

# Update EVERYTHING

if (($ISOSX)); then
  echo "Updating Homebrew"
  brew update && brew upgrade --all
fi

if ((! $ISOSX)); then
  echo "Updating Linux"
  sudo apt-get update && sudo apt-get upgrade -y
  sudo dnf upgrade -y
fi

echo "Updating dotfiles"
cd ~/.dotfiles && git pull
cd ~/.zprezto && git pull && git submodule update --init --recursive
