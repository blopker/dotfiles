# Sample gitconfig
#
# You probably want to change the [user] section here since you are not me.

[user]
        name = Bo Lopker
        email = lopkerk@gmail.com
[alias]
        count   = !git shortlog -sn
[color]
        diff = auto
        status = auto
        branch = auto
        ui = true
[core]
        excludesfile = ~/.gitignore
        editor = vim
        untrackedCache = true
        rebase = true
[apply]
        whitespace = nowarn
[mergetool]
        keepBackup = false
[difftool]
        prompt = false
[help]
        autocorrect = 1
[credential]
        helper = cache --timeout=36000
[branch]
        autosetupmerge = always
        autosetuprebase = always
[push]
        default = current
[pull]
	rebase = false
[init]
	defaultBranch = main
[merge]
	conflictstyle = diff3
[gpg]
	format = ssh
