# The syntax is "key = value". The whitespace around the
# equals doesn't matter.
background = 000000
background-opacity = 0.9
background-blur-radius = 20

window-theme = dark
quit-after-last-window-closed=true
macos-non-native-fullscreen = true
macos-titlebar-style=tabs
auto-update=off
theme = "Atom"

copy-on-select = true

# Comments start with a `#` and are only valid on their own line.
# Blank lines are ignored!

keybind = ctrl+z=close_surface
keybind = ctrl+d=new_split:right

font-family = Monaco
font-size = 20
font-feature = -liga

# Keybind
keybind = cmd+left=previous_tab
keybind = cmd+right=next_tab
keybind = control+d=unbind
